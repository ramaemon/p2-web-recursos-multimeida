        header(class="header")
            div
                a(href="index.pug") 
                    img(src="img/tori-logo.svg")
                h1 Japó
            include  ../mixins/nav-external.pug
            +menu-nav-external()
    
        main(class="container-responsive")
            div
                section(id="enllaços")
                    h2 Enllaços
                    ul
                        li  
                            a(href="https://japonismo.com/" target="_blank") Japonismo
