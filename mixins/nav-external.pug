- var menu = [{link: '../src/index.pug', title: 'Portada', submenu: false},{link: '#categoria', title: 'Categories', submenu: [{link: 'temples.pug', title: 'Temples'}, {link: 'itineraris.pug', title: 'Itineraris'}] },{link: '../src/index.pug#presentacio',title: 'Presentació', submenu: false},{link: 'enllaços.pug',title: 'Enllaços', submenu: false}]
mixin menu-nav-external()
  nav
    ul
      each nav in menu
        if nav.submenu
          li=nav.title
            ul
              each item in nav.submenu
                li 
                  a(href=item.link)=item.title
        else
          li          
            a(href=nav.link)=nav.title